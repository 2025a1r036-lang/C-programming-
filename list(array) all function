#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int list[MAX];
int n =0;
void insertInBeg(int value){
   if(n==MAX){
      printf("List is fullll\n");
      return ;
   }
   for(int i=n-1;i>=0;i--){     //i=n;i>n;i--//list[i]=list[i-1]
      list[i+1]=list[i];
   }
   list[0]=value;
   n++;
   printf("Element insert!!!!:\n\n");
}
void insertAtEnd(int value){
   if(n == MAX){
      printf("List is full!!!!\n");
      return;
   }
   list[n++]=value;
   printf("Element Inserted!!!!\n\n");
   
}
void insertAtPosition(int pos,int value){
   if(n == MAX){
      printf("List is fulll!!!!");
   }
   if(pos>=n || pos<0){
      printf("Position is invalid!!!\n\n");
   }
   else{
      for(int i=n-1;i>=pos;i--){
         list[i+1]=list[i];
      }
      list[pos]=value;
      n++;
      printf("Element insert!!!!!\n\n");
    }
}
void deleteFromBeg(){
   if(n==0){
      printf("List is empty!!!!\n\n");
      return;
   }
   for(int i=0;i<n-1;i++){
      list[i]=list[i+1];
   }
   n--;
   printf("Element deleted \n\n");
}
void deleteFromEnd(){
   if(n==0){
      printf("List is empty!!!\n\n");
     return;
   }
   n--;
   printf("Element Deleted!!\n\n");
}
void deleteAtPosition(int pos){
   if(n==0){
      printf("List is empty");
   }
   if(pos<0||pos>=n){
      printf("Position is invalid!!!!\n\n");
   }
   else {
      for(int i= pos;i<n-1;i++){
         list[i]=list[i+1];
      }
      n--;
      printf("Element Deleted !!!!\n\n");
   }
}

void displayList(){
   if(n==0){
      printf("List is empty\n");
      return;
   }
   for(int i=0;i<n;i++){
      printf("%d\t",list[i]);
   }
   printf("\n");
}
int search(int value){
   for(int i=0;i<n;i++){
      if(list[i] == value){
         return i;
      }
   }
   return -1;
}
void updateList(int pos,int value){
   if(pos < 0 || pos >=n){
      printf("position invalid!!!\n\n");
   }
   else{
   list[pos] = value;
   printf("Element updated!!!!\n\n");
   }
}
void bubbleSort(){
   if(n==0){
      printf("List is emptyy!!!!\n\n");
   }
 else{
   for(int i=0;i<n-1;i++){
      for(int j=0; j<n-i-1;j++){
         if (list[j]>list[j+1]){
            int temp = list[j];
            list[j]=list[j+1];
            list[j+1]=temp;
         }

         
      }
      printf("Element inserted!!!!\n\n");
   }
 }
}
int main(){
    while(1){
        printf("1. Insert the brginning\n");
        printf("2. Insert the at end\n");
        printf("3. Insert at any position\n");
        printf("4. Delete from beginning\n");
        printf("5. Delete from end\n");
        printf("6. Delete from any position\n");
        printf("7. Display list\n");
        printf("8. Search element in list\n");
        printf("9 .Update element in list\n");
        printf("10 .sort element of list\n");
        printf("11 .Exit\n");
        int choice,data,pos;
        printf("Enter choice: ");
        scanf("%d",&choice);
        switch(choice){
            case 1:
            printf("Enter data ");
            scanf("%d",&data);
            insertInBeg(data);
               break;
            case 2:
             printf("Enter data ");
            scanf("%d",&data);
            insertAtEnd(data);
               break;
            case 3:
            printf("Enter position and data ");
            scanf("%d %d",&pos,&data);
            insertAtPosition(pos,data);
               break;
            case 4:
            deleteFromBeg();
               break;
            case 5:
            deleteFromEnd();
               break;
            case 6:
            printf("Enter Position ");
            scanf("%d",&pos);
            deleteAtPosition(pos);
               break;
            case 7:
            displayList();
               break;
            case 8:
            printf("Enter value to seacrh ");
            scanf("%d",&data);
            int index = search(data);
            if(index != -1){
               printf("Element found at Index %d\n",index);
            }
            else{
               printf("Element not found \n");
            }
               break;
            case 9:
            printf("Enter index and value ");
            scanf("%d %d",&pos,&data);
            updateList(pos,data);
               break;
            case 10:
            bubbleSort();
               break; 
            case 11:
            exit(0);
               break;
            default :   
        printf("Invalid choice");
        }
}
    return 0;
}
