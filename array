#include<stdio.h>
int main(){
  int stu[3];
  for(int i=0; i<3; i++){
    printf("Enter roll no: ");
    scanf("%d",&stu[i]);
  }
  for(int i=0; i<3; i++){
   printf("Roll no. of student is :%d\n",stu[i]);
 }
  return 0;
}



//2nd way 
#include<stdio.h>
int main(){
  int size ;
  printf("Enter number of student ");
  scanf("%d",&size);
  int stu[size];
  for(int i=0; i<3; i++){
    printf("Enter roll no: ");
    scanf("%d",&stu[i]);
  }
  for(int i=0; i<3; i++){
   printf("Roll no. of student is :%d\n",stu[i]);
 }
  return 0;
}
